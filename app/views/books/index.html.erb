
<div class="container">
  <div class="row">
  <div class="col-lg-3">


 <h1>User info</h1>
<p>name     <%= @user.name %></p>
<p>introduction     <%= @user.email %></p>

<% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
    
<h2>New Book</h2>
  <%= form_for(@book) do |f| %>

    <h6>Title</h6>
    <%= f.text_field :title %>
 
    <h6>Opinion</h6>
    <%= f.text_area :body %>
 <br>
    <%= f.submit 'Create Book' %>
 
<% end %>
</div>
<h2>Books</h2>
  <div class="col-lg-9">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
    <tr> 
    <td>
    <%= book.title %>
    </td>
    <td>
    <%= book.body %>
    </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>