<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/5c442e0d91.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <nav class="nav navbar-nav navbar-left">
      <span>
        Bookers
      </span>
    </nav>
    </div>
    <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarEexample7">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', user_path(current_user.id), class:"glyphicon glyphicon-home" %></li>
        <li><%= link_to 'Users', users_path, class:"glyphicon glyphicon-user" %></li>
        <li><%= link_to 'Books', books_path, class:"glyphicon glyphicon-book" %></li>
        <li><%= link_to 'Logout', destroy_user_session_path,  method: :delete,class:"glyphicon glyphicon-log-out" %></li>
      </ul>
    <% else %>
    <div class="collapse navbar-collapse" id="navbarEexample7">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', root_path, class:"glyphicon glyphicon-home" %></li>
        <li><%= link_to 'About', home_about_path, class:"glyphicon glyphicon-link" %></li>
        <li><%= link_to 'sign up', new_user_registration_path, class:"glyphicon glyphicon-edit" %></li>
        <li><%= link_to 'login', new_user_session_path, class:"glyphicon glyphicon-log-in" %></li>
    <% end %>
      </ul>
</nav>
<div class="notice" >
<% if notice %>
　　<p><%= notice %></p>
<% end %>
<% if alert %>
   <p><%= alert %></p>
<% end %>
</div>

<div class="search_form">
<% if logged_in? %>
<div class="search">
<%= form_tag(users_search_path, :method => 'get') do %>
    <%= text_field_tag :search %>
    <%= select_tag(:option1, options_for_select([["User", "1"],["Book","2"]]))%> 
    <%= select_tag(:option2, options_for_select([["部分一致", "1"],["完全一致","2"], ["前方一致","3"], ["後方一致","4"]]))%>
    <%= submit_tag 'Search' %>
<% end %>
</div>
</div>
<% end %>
<%= yield %>
<div class="row">
  <div class="col-xs-11">
 <footer>
    <p class="footer-text">CopyRight Infratop.Inc.</p>
  </footer>
</div>
</div>
  </body>
</html>
