<%= render "/users/sidebar", user: current_user, book: @book %>

  <h2>Users</h2>
  <div class="col-xs-9">
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
    <tr> 
      <td width="100" height="50">
      <div class="user-edit-image">
      <%= attachment_image_tag user, :profile_image, class: "img-square", fallback: "no_image.jpg", size: "60x60" %>
    </div>
    </td>
    <td>
    <%= user.name %>
    </td>
    <td>
    <%= link_to 'Show', user_path(user) %>
    </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>